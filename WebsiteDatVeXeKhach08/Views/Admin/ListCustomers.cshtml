@model IEnumerable<WebsiteDatVeXeKhach08.User>

@{
    ViewBag.Title = "ListCustomers";
}

<h2>ListCustomers</h2>

<p>
    @Html.ActionLink("Create New", "CreateCustomer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRole.RoleName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCustomer", new { id=item.UserID }) |
            @Html.ActionLink("Details", "DetailsCustomer", new { id=item.UserID }) |
            @Html.ActionLink("Delete", "DeleteCustomer", new { id=item.UserID })
        </td>
    </tr>
}

</table>

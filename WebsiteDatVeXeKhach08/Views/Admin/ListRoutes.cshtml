@model IEnumerable<WebsiteDatVeXeKhach08.Route>

@{
    ViewBag.Title = "ListRoutes";
}

<h2>ListRoutes</h2>

<p>
    @Html.ActionLink("Create New", "CreateRoute")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RouteName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RouteName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRoute", new { id=item.RouteID }) |
            @Html.ActionLink("Details", "DetailsRoute", new { id=item.RouteID }) |
            @Html.ActionLink("Delete", "DeleteRoute", new { id=item.RouteID })
        </td>
    </tr>
}

</table>
